<head>
    <title>Edit Profile</title>
</head>
<nav>
    <a href="/home">Home</a>
    |
    <% if (userId){%>
        <a href="/profile" class="selected">Profile</a>
        |
        <a href="/logout">Logout</a>
        |
        <% } else { %>
            <a href="/login">Login</a>
            |
            <a href="/signup">Sign Up</a>
            |
            <% } %>
                <a href="/instructors">Instructors</a>
                |
                <a href="/courses">Courses</a>
                |
                <a href="/students">Students</a>
                |
                <a href="/timeline">General Timeline</a>
</nav>


<div class="students-container">
    <div class="students-info">
        <div class="students-img">
            <img src="https://icons-for-free.com/iconfiles/png/512/customer+information+personal+profile+user+icon-1320086045331670685.png"
                alt="">
        </div>
        <div class="student-details">
            <form action="/profile/<%= student.id %>?_method=put" method="POST">
            <p><b>Name:</b>
                <input type="text" name="name" value="<%= student.name %>"/>
                
            </p>
            <p><b>Email:</b>
                <input type="text" name="email" value="<%= student.email %>"/>

            </p>
            <p><b>Number:</b>
                <input type="text" name="number" value="<%= student.number %>"/>

            </p>
        </div>
    </div>

    <div class="students-courses">

        <p><b>Contact Management to Change Courses!</b></p>
        <ul>
            <% for(let i=0; i<student.course.length; i++){ %>

                <li><%= student.course[i] %></li>

                <% } %>
        </ul>
    </div>

</div>

<div class="main">

    <input type="submit" class="button" value="Save">

</div>
</form>