                <a href="/instructors">Instructors</a>
                |
                <a href="/courses" class="selected">Courses</a>
                |
                <a href="/students">Students</a>
                |
                <a href="timeline">General Timeline</a>
</nav>

<div class="main">

    <h2 class="title">Edit Course</h2>

    <form action="/courses/<%= course.id %>?_method=put" class="form" method="POST">
    
        <p>Course Name</p>
        <input type="text" value="<%= course.name %>" name="name">

        <p>Length, Location & Type</p>
        <select name="length">
            <option value="12-Week">12-Week</option>
            <option value="6-Week">6-Week</option>
        </select>
        <select name="location">
            <option value="Online">Online</option>
            <option value="Campus">Campus</option>
        </select>
        <select name="type">
            <option value="Full-time">Full-time</option>
            <option value="Part-time">Part-time</option>
        </select>
        <p>Total Hours</p>
        <input type="number" value="<%= course.hours %>" name="hours">

        <p>Description</p>
        <textarea class="courseDesc" type="text" name="description"><%= course.description %></textarea>
        <br><br>
        <input type="submit" class="button" value="Save">
    </form>
</div>