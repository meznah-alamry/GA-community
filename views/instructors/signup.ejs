<div class="main">
    <form action="/instructors" class="form" method="POST">
        <h2 class="loginSignup"> Create Your Account</h2>
        <p>Full Name</p>
        <input type="text" placeholder="your name" name="name">
        <p>Hidden Talent</p>
        <input type="text" placeholder="your email" name="talent">
        <p>Email</p>
        <input type="text" placeholder="your email" name="email">

        <p>Password</p>
        <input type="password" placeholder="your password" name="password">

        <p>Phone Number</p>
        <input type="tel" id="phone" name="number" placeholder="966556677889">
        <br>
        <br>
        <p class="inline">Course</p>
        <select name="course">
            <% courses.forEach((el,i) => { %>
                <option value="<%= el.name %>"><%= el.name %></option>
          <%  }) %>  
        </select>
        <p class="inline">Role</p>
        <select name="role">
            <option value="LI">LI</option>
            <option value="JLI">JLI</option>
            <option value="IA">IA</option>
        </select>
        <br>
        <br>
        <input class="button" type="submit" value="Submit">

    </form>
</div>